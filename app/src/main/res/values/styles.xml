<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#4fb262</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:height">200dp</item>
        <item name="android:layout_weight">250dp</item>
        <item name="android:background">@drawable/app_logo</item>
        <item name="android:text">효율적인 학교 생활</item>
    </style>

</resources>

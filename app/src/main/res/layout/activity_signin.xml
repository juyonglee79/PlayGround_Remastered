<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="SignInVm"
            type="com.dsm2018.playground_remastered.Activity.SignIn.SignInViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main">

        <ImageView
            android:id="@+id/img_signIn_logo"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/app_logo" />

        <Button
            android:id="@+id/btn_siginIn_to_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:text="password를 잊으셨나요?"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginBottom="@dimen/margin_all_large" />

        <Button
            android:id="@+id/btn_signIn_to_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:text="아직 계정이 없으신가요?"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginBottom="@dimen/margin_all_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_siginIn_to_find_password"
            android:layout_below="@+id/img_signIn_logo"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_signIn_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_all_small"
                android:background="@drawable/back_et_login"
                android:hint="ID"
                android:maxLines="1"
                android:paddingStart="15dp"
                android:paddingLeft="@dimen/margin_all_medium"
                android:paddingRight="@dimen/margin_all_medium"
                android:text="@={SignInVm.id}"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_signIn_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_all_small"
                android:background="@drawable/back_et_login"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="15dp"
                android:paddingLeft="@dimen/margin_all_medium"
                android:paddingRight="@dimen/margin_all_medium"
                android:text="@={SignInVm.password}"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btn_signIn_signIn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_btn_login"
                android:gravity="center"
                android:onClick="@{()->SignInVm.post()}"
                android:paddingLeft="@dimen/margin_all_medium"
                android:paddingRight="@dimen/margin_all_medium"
                android:text="Log in"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="자동로그인"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>

</layout>